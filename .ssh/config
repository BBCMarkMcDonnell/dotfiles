Host ?.access.*.cloud.bbc.co.uk
  IdentityFile ~/.ssh/cosmos_rsa

Host *,??-*-?
  User mark_mcdonnell
  IdentityFile ~/.ssh/cosmos_rsa
  ProxyCommand >&1; h="%h"; r=${h##*,}; i=${h%%,*}; v=$(($(cut -d. -f2 <<<$i) / 32)); exec ssh -q -p 22000 bastion-tunnel@$v.access.$r.cloud.bbc.co.uk nc $i %p
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null

# git clone git@BBCMarkMcDonnell:<organisation>/<repo>.git
Host BBCMarkMcDonnell
  User git
  HostName github.com
  IdentityFile ~/.ssh/github_bbc_rsa

# git clone git@Integralist:<organisation>/<repo>.git
# default is just github.com instead of Integralist
Host Integralist
  User git
  HostName github.com
  IdentityFile ~/.ssh/github_rsa
