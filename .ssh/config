Host access.*.cloud.bbc.co.uk
  IdentityFile ~/.ssh/cosmos_rsa
  ProxyCommand ssh -q -p 2222 mcdonm15@bastion-cwwtf.dev.bbc.co.uk nc %h %p

Host *,??-*-?
  User mark_mcdonnell
  IdentityFile ~/.ssh/cosmos_rsa
  ProxyCommand >&1; h="%h"; exec ssh -q -p 22000 bastion-tunnel@access.${h##*,}.cloud.bbc.co.uk nc ${h%%,*} %p
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null
